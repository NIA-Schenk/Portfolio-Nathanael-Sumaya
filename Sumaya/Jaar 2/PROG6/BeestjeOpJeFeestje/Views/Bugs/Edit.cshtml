@model BeestjeOpJeFeestje.Models.Bug

@{
    ViewData["Title"] = "Edit";
}

<h2>Bewerk beestje : <cite>@Model.Name</cite></h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" id="UpdateBug">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" type="text" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="BugTypeId" class="control-label"></label>
                <select asp-for="BugTypeId" class="form-control" asp-items="ViewBag.Types">
                    <option value="">Kies een type</option>
                </select>
                <span asp-validation-for="BugTypeId" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <iconify-icon icon="ph:floppy-disk"></iconify-icon> Opslaan
                </button>
                <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
            </div>
        </form>
    </div>
</div>